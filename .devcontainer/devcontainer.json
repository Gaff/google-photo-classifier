// .devcontainer/devcontainer.json
{
    "name": "Python Cloud Function Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "hashicorp.terraform",
                "googlecloudtools.cloudcode"
            ]
        }
    },
    "postCreateCommand": "pip install -r src/requirements-dev.txt",
    "remoteUser": "vscode"
}
